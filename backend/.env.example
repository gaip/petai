# PetTwin Care - Environment Configuration
# Copy this file to .env and fill in your actual values

# ==========================================
# Confluent Cloud (Kafka)
# ==========================================
# Get these from: https://confluent.cloud/environments/<env-id>/clusters/<cluster-id>/api-keys
CONFLUENT_BOOTSTRAP_SERVERS=pkc-xxxxx.us-east-1.aws.confluent.cloud:9092
CONFLUENT_API_KEY=YOUR_CONFLUENT_API_KEY
CONFLUENT_API_SECRET=YOUR_CONFLUENT_API_SECRET

# ==========================================
# Google Cloud / Vertex AI
# ==========================================
# Project ID from: https://console.cloud.google.com/
GCP_PROJECT_ID=your-gcp-project-id
# Optional: Path to service account JSON
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json

# ==========================================
# Datadog Observability
# ==========================================
# Get API & APP keys from: https://app.datadoghq.com/organization-settings/api-keys
DD_API_KEY=your_datadog_api_key
DD_APP_KEY=your_datadog_app_key

# Datadog Agent Configuration
DD_AGENT_HOST=localhost  # Use 'datadog-agent' when running in Docker Compose
DD_AGENT_PORT=8125       # StatsD port (default: 8125)
DD_SITE=datadoghq.eu     # or datadoghq.com for US region

# Datadog Tags (optional)
DD_SERVICE=pettwin-care
DD_ENV=production
DD_VERSION=1.0.0

# ==========================================
# Application Configuration
# ==========================================
PORT=8080  # For Cloud Run health checks

# ==========================================
# Optional: Feature Flags
# ==========================================
ENABLE_DATADOG=true
ENABLE_VERTEX_AI=true
DEBUG_MODE=false
